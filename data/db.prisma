generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Pet {
    _id     Int    @id @default(autoincrement())
    name    String
    type    String
    owner   User   @relation(fields: [ownerId], references: [id])
    ownerId String
    level   Int
}

model Job {
    _id        Int      @id @default(autoincrement())
    title      String
    type       String
    level      Int
    avgPerHour Float
}

model User {
    _id       Int    @id @default(autoincrement())
    id        String @unique
    bank      Int    @unique @default(0)
    wallet    Int    @default(0)
    inventory Item[]
    pets      Pet[]
    jobs      Job[]
}

model Guild {
    _id              Int      @id @default(autoincrement())
    prefixes         String[]
    id               String   @unique
    currencyName     String   @default("coin")
    currencyPlural   String   @default("coins")
    currencySymbol   String   @default(":coin:")
    disabledModules  String[]
    disabledCommands String[]
}

model Item {
    _id  Int    @id @default(autoincrement())
    name String
    type String
}
